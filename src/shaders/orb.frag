#version 410
#extension GL_ARB_separate_shader_objects : enable

layout(location = 0) out vec4 out_color;

void main()
{
    vec3 normal = gl_FrontFacing ? vertex.world_normal : -vertex.world_normal;
	out_color = vec4(normal * 0.5 + 0.5, 1.0);
}
